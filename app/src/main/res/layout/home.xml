<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeActivity"
    android:padding="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="342dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/teluguSongs"
            android:layout_width="151dp"
            android:layout_height="128dp"
            android:layout_marginLeft="76dp"
            android:layout_toRightOf="@+id/HindiSongs"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:scaleType="centerCrop"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <ImageView
            android:id="@+id/HindiSongs"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingTop="15dp"
            android:src="@drawable/hi"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/HindiSongs"
            android:paddingTop="5dp"
            android:text="@string/bollywood_songs" />

        <ImageView
            android:id="@+id/TeluguSongs"
            android:layout_width="151dp"
            android:layout_height="128dp"
            android:layout_marginStart="76dp"
            android:layout_toRightOf="@+id/HindiSongs"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/te"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TeluguSongs"
            android:layout_marginLeft="76dp"
            android:layout_marginBottom="-26dp"
            android:layout_toRightOf="@+id/HindiSongs"
            android:paddingTop="5dp"
            android:text="Telugu Songs" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignBottom="@+id/HindiSongs"
            android:id="@+id/EnglishSongs"
            android:src="@drawable/english"
            android:importantForAutofill="auto"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/EnglishSongs"
            android:text="English  Songs"

            android:textAlignment="center"/>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Might Like"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:paddingTop="15dp"/>

    <ImageView
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:paddingTop="15dp"
        android:id="@+id/PopularEnglishSongs"
        android:src="@drawable/popularenglish"
        android:scaleType="fitCenter"/>

    <ImageView
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:paddingTop="15dp"
        android:id="@+id/PopularHindiSongs"
        android:src="@drawable/popularhindi"
        android:scaleType="centerCrop"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/library"
        android:textAlignment="center"
        android:id="@+id/library" />


</LinearLayout>